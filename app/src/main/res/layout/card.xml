<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/cardMargin"
    android:layout_marginTop="@dimen/cardMargin"
    android:layout_marginEnd="@dimen/cardMargin"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noteTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardTextMarginStart"
            android:layout_weight="1"
            android:textSize="@dimen/noteTitleTextSize"
            tools:text="Description" />

        <TextView
            android:id="@+id/noteDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardTextMarginStart"
            android:layout_weight="1"
            android:textSize="@dimen/noteInfoTextSize"
            tools:text="Description" />

        <TextView
            android:id="@+id/noteDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/cardTextMarginStart"
            android:layout_weight="1"
            android:textSize="@dimen/noteInfoTextSize"
            tools:text="Description" />

    </LinearLayout>
</androidx.cardview.widget.CardView>