<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settingsScreenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settingsScreenTitle"
        android:textSize="@dimen/settingsScreenTitleTextSize" />

    <TextView
        android:id="@+id/settingsScreenMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/underConstructionMessage"
        android:textSize="@dimen/settingsScreenMessageTextSize" />

</LinearLayout>